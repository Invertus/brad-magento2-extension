<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="bradsearch" translate="label" sortOrder="400">
            <label>BradSearch</label>
        </tab>
        <section id="bradsearch_search" translate="label" type="text" sortOrder="200"
                 showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Search Settings</label>
            <tab>bradsearch</tab>
            <resource>Magento_Config::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10"
                   showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable BradSearch for Search Results</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>When enabled, search results page will use BradSearch API instead of native Magento search</comment>
                </field>
                <field id="api_url" translate="label comment" type="text" sortOrder="20"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API URL</label>
                    <comment>BradSearch API endpoint URL for product search</comment>
                </field>
                <field id="facets_api_url" translate="label comment" type="text" sortOrder="25"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Facets API URL</label>
                    <comment>BradSearch API endpoint URL for facets/aggregations</comment>
                </field>
                <field id="api_key" translate="label comment" type="text" sortOrder="30"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Key</label>
                    <comment>BradSearch API key for this store view (for future use)</comment>
                </field>
            </group>
            <group id="sync" translate="label" type="text" sortOrder="20"
                   showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Real-time Sync Configuration</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Real-time Sync</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>When enabled, product changes will be sent to BradSearch via webhook for incremental indexing</comment>
                </field>
                <field id="webhook_url" translate="label comment" type="text" sortOrder="20"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Webhook URL</label>
                    <comment>Laravel endpoint to receive product change notifications (e.g., https://your-brad-app.com/api/webhook/magento/products-changed)</comment>
                    <validate>validate-url</validate>
                </field>
                <field id="secure_token" translate="label comment" type="obscure" sortOrder="25"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Secure Sync Token</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <comment>Authentication token sent with webhook requests to verify the source</comment>
                </field>
            </group>
            <group id="private_endpoint" translate="label" type="text" sortOrder="30"
                   showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Private Endpoint (BradSearch Sync)</label>
                <comment><![CDATA[Enable API key authentication to bypass stock filtering for sync operations. When enabled and a valid API key is provided via <code>X-BradSearch-Api-Key</code> header, out-of-stock products will be included in GraphQL product queries.]]></comment>
                <field id="enabled" translate="label" type="select" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Private Endpoint</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="api_key" translate="label comment" type="obscure" sortOrder="20"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <comment><![CDATA[Send as <code>X-BradSearch-Api-Key</code> header. Generate with: <code>openssl rand -base64 32</code>]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
