<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bradsearch_sync_state" resource="default" engine="innodb" comment="BradSearch Sync State">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="store_id" unsigned="true" nullable="false" comment="Store ID"/>
        <column xsi:type="bigint" name="last_version_id" unsigned="true" nullable="false" default="0" comment="Last Processed Changelog Version ID"/>
        <column xsi:type="timestamp" name="last_sync_at" on_update="false" nullable="true" comment="Last Sync Timestamp"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="BRADSEARCH_SYNC_STATE_STORE_ID">
            <column name="store_id"/>
        </constraint>
        <index referenceId="BRADSEARCH_SYNC_STATE_LAST_VERSION_ID" indexType="btree">
            <column name="last_version_id"/>
        </index>
    </table>
</schema>
